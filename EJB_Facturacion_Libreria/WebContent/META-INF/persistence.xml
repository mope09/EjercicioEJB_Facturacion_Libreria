<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="cmd">
		<jta-data-source>java:/LibreriaDS</jta-data-source>
		<class>com.ejb.libro.entidades.Autor</class>
		<class>com.ejb.libro.entidades.Categoria</class>
		<class>com.ejb.libro.entidades.Libro</class>
		<class>com.ejb.libro.entidades.Cliente</class>
		<class>com.ejb.libro.entidades.DetalleFactura</class>
		<class>com.ejb.libro.entidades.Factura</class>
		<class>com.ejb.libro.entidades.Nacionalidad</class>
		<class>com.ejb.libro.entidades.Rol</class>
		<class>com.ejb.libro.entidades.Usuario</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
